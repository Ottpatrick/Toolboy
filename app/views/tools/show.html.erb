<div class="container">
  <h1>The details of our great <%= @tool.tool_name%></h1>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Details</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Category</th>
            <th>Brand</th>
            <th>Available</th>
          </thead>
            <tr>
              <td><%= @tool.category %></td>
              <td><%= @tool.brand %></td>
              <td><%= @tool.available %></td>
            </tr>
        </tbody>
        <H1><%= @tool.daily_rate %>€ per day</H1>
      </table>
    <p>Location: <%= @tool.vendor_name %>
                <%= @tool.street %>
                <%= @tool.zipcode %>
                <%= @tool.city %> </p>



  </div>


















