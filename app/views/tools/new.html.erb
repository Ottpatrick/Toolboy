<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Add a new tool:</h1>

      <%= simple_form_for @tool do |f| %>
        <%= f.input :tool_name %>
        <%= f.input :brand %>
        <%= f.input :vendor_name %>
        <%= f.input :category %>
        <%= f.input :description %>
        <%= f.input :daily_rate %>
        <%= f.input :street %>
        <%= f.input :city %>
        <%= f.input :zipcode%>
        <%= f.input :photo, as: :file%>



        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
