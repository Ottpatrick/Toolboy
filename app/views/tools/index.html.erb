
<div class="tools-index-container">


  <div class="left">

  <div class="filters">
    <p class= "now-available"> Over 10.000 tools now available</p>
    <h2> Search your tool by category</h2>

    <div class="categories">
      <% @categories.each do |category|%>
        <%= link_to category, tools_path(category: category), class: "btn btn-ghost" %>
      <% end %>
       <%= link_to "All", tools_path, class: "btn btn-ghost" %>
    </div>
  </div>

    <% @tools.each do |tool| %>

    <div class="card">

      <div class="img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path tool.photo.key, height: 300, width: 400, crop: :fill %>')">

      </div>

      <div class="info">
        <div id= "details">
          <p id ="category"> <%= tool.category %></p>
          <p id="tool-name"> <%= tool.tool_name %></p>
          <p id="tool-brand"> Brand: <%= tool.brand %></p>
          <p id="tool-vendor">Vendor: <%= tool.vendor_name %></p>
        </div>
      </div>


      <div class="insights">

        <% if tool.available %>
          <p id= "available"> available </p>
        <% else %>
          <p id= "unavailable"> not available </p>
        <%end %>

        <p id="rate"> <%= tool.daily_rate %> EUR PER DAY </p>

        <div class= "stupid-button">
          <%= link_to "Tool details", tool_path(tool), class:"button" %>
        </div>

      </div>


    </div>

    <% end %>

  </div>

  <div class="right">

    <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

  </div>

</div>
